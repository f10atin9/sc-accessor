apiVersion: admissionregistration.k8s.io/v1
kind: ValidatingWebhookConfiguration
metadata:
  name: "snapshot-accessor.storage.kubesphere.io"
webhooks:
- name: "snapshot-accessor.storage.kubesphere.io"
  rules:
  - apiGroups:   ["snapshot.storage.k8s.io"]
    apiVersions: ["v1"]
    operations:  ["CREATE", "UPDATE", "DELETE"]
    resources:   ["volumesnapshots"]
    scope:       "*"
  clientConfig:
    service:
      namespace: "default"
      name: "pvc-accessor-service"
      path: "/volumesnapshot"
    caBundle: ${CA_BUNDLE}
  admissionReviewVersions: ["v1"]
  sideEffects: None
  failurePolicy: Ignore # We recommend switching to Fail only after successful installation of the webhook server and webhook.
  timeoutSeconds: 5 # This will affect the latency and performance. Finetune this value based on your application's tolerance.
